<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Connexion</title>
    </head>
    <body>
        <input type="text" value="" id="login" name="login" placeholder="login"/>
        <input type="password" value="" id="password" name="password" placeholder="password"/>
        <input type="submit" value="connexion"/>
        <% if (typeof(result) !== "undefined") { %>
            <h1>Choisissez un sondage : </h1>
            <% for(var i = 0 ; i < result.length ; i++) { %>
                <li><a href="/sondage/<%= result[i].id_sondage %>/admin"><%= result[i].libelle_sondage %></a></li>
            <% } %>
        <% }else { %>
            <form method="get" action="/sondages/admin">
                <button type="submit" id="sondage">voir les songades</button>
            </form>
            <form method="get" action="/sondages/creation">
                <button type="submit" id="creer">Nouveau sondage</button>
            </form>
        <% } %>
    </body>
</html>